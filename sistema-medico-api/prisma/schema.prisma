generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Medico {
  id        Int      @id @default(autoincrement())
  nome      String
  cpf       String
  crm       String
  especialidade String
  dataNascimento DateTime
  consultas Consulta[]
}

model Paciente {
  id        Int      @id @default(autoincrement())
  nome      String
  cpf       String
  dataNascimento DateTime
  endereco  String
  consultas Consulta[]
}

model Consulta {
  id        Int      @id @default(autoincrement())
  data      DateTime
  medico    Medico   @relation(fields: [medicoId], references: [id])
  medicoId  Int
  paciente  Paciente @relation(fields: [pacienteId], references: [id])
  pacienteId Int
}

model Funcionario {
  id        Int      @id @default(autoincrement())
  nome      String
  cpf       String
  dataNascimento DateTime
  dataAdmissao DateTime
  endereco  String
  cargo    String
}